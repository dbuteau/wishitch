{
    "name": "wishitch",
    "version": "0.1.0",
    "description": "Add current tab to your self-hosted wishitch server",
    "homepage": "https://github.com/dbuteau/wishitch",
    "author": "Daniel Buteau",
    "license": "GPL-3.0-only",
    "repository": {
      "type": "git",
      "url": "https://github.com/dbuteau/wishitch.git"
    },
    "bugs": {
      "url": "https://github.com/dbuteau/wishitch/issues"
    },
    "devDependencies": {
        "fancy-log": "*",
        "jshint": "*",
        "zip-dir": "*",
        "web-ext": "*"
    },
    "xo": {
        "space": true,
        "envs": [
          "browser",
          "webextensions"
        ],
        "rules": {
          "import/no-unassigned-import": 0,
          "no-lonely-if": "off"
        },
        "ignores": [
          "build/**"
        ]
    },
    "scripts": {
        "test": "web-ext lint",
        "build": "web-ext build",
        "sign": "web-ext sign",
        "release:amo": "web-ext run",
        "release": "npm run build && npm run release:amo"
    }
}